<h1>Invoice #<%= @invoice.id %></h1>

<div class="form-container">
  Created on: <%= @invoice.formatted_date %><br>
  Customer: <%= @invoice.customer.full_name %>
  <%= form_with url: admin_invoice_path(@invoice), method: :patch, local: true do |f| %>
    <%= f.label :status %>
    <%= f.select :status, ["in progress", "cancelled", "completed"], selected: @invoice.status %>
    <%= f.submit "Update Invoice Status" %><br>
  <% end %>
  Total For This Invoice: <%= @invoice.format_money(:total_revenue) %>


  <h3>Items on this order:</h3>
  <% @invoice.invoice_items.each do |invoice_item| %>
    <div id="item-<%=invoice_item.id%>">
      Item: <%= invoice_item.item.name %><br>
      Quantity Ordered: <%= invoice_item.quantity %><br>
      Sold at: <%= invoice_item.format_money(:unit_price) %> per unit
      Item Status: <%= invoice_item.status %>
    </div>
  <% end %>
</div>